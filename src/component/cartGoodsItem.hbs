{{#each goodsBlock}}
<div class="card my-2">
    <div class="row">
        <div class="col-2 m-2">
            <img src="{{image}}">
        </div>
        <div class="col-4">
            <h5>{{name}}</h5>
            {{description}}
        </div>

        <div class="col-2">
            {{#with price}}
            <div class="mt-5">
                {{title}} :
            </div>
            <strong>{{value}}</strong>
            {{/with}}
        </div>
        <div class="col-1 my-5 py-3">
            {{amount}}
        </div>
        <div class="col-2 m-3">
            {{#each buttons}}
            {{#if isPrimary}}<button class="btn btn-primary my-3">{{text}}</button>{{/if}}
            {{#if isDanger}}<button class="btn btn-outline-danger">{{text}}</button>{{/if}}
            {{/each}}
        </div>
    </div>
</div>
{{/each}}