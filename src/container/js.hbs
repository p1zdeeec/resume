<div>
    {{> title data=name big=true }}
    <b>{{description}}</b>
    {{#with history}}
    <div><b>{{founder}} - ({{year}})</b></div>
    {{/with}}


    <section class="mt-5">
        <div>
            {{> title data="Types" big=false }}
            {{#each types}}
            <div>
                <li>
                    {{this}}
                </li>
            </div>
            {{/each}}

            <hr class="my-5">

            <div>
                {{> title data="Syntax" big=false }}
                {{#each syntax}}
                <div>
                    {{this}}
                </div>
                {{/each}}
            </div>

            <hr class="my-5">

            <div>
                {{> title data="Features" big=false }}
                {{#each features}}
                <div>
                    {{this}}
                </div>
                {{/each}}
            </div>

            <hr class="my-5">

            <div>
                {{> title data="Libraries" big=false }}
                {{#each libraries}}
                <div>
                    {{this}}
                </div>
                {{/each}}
            </div>

            <hr class="my-5">

            <div>
                {{> title data="Tools" big=false }}
                {{#each tools}}
                <div>
                    {{this}}
                </div>
                {{/each}}
            </div>

            <hr class="my-5">

            <div>
                {{> title data="Community" big=false }}
                {{#each community}}
                <div>
                    <ul class="mb-5">
                        <li>
                            <h5>{{name}}</h5>
                        </li>
                        {{type}}
                    </ul>
                </div>
                {{/each}}
            </div>

        </div>
    </section>
</div>